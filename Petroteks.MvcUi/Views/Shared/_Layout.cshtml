    <script>
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        $(".hover").mouseleave(
            function () {
                $(this).removeClass("hover");
            }
        ); $(document).ready(function () {
            if ($(window).innerWidth() <= 900) {
                $(".alignchange").removeClass("center-align my-auto");
                $(".selected").removeClass("center-align");
                $(".selected").css("cssText", "left:0%!important;");
            }
            else {
                $(".selected").css("cssText", "left:15%!important;");
                $(".alignchange").addClass("center-align my-auto");
                $(".selected").addClass("center-align");
            }
            $('.slider').slider({
                full_width: true,
                height: 550, // default - height : 400
            });
        });
    </script>





