@model ProductViewModel
@{
}

@await Component.InvokeAsync("CategoryTree", new { website = (Website)ViewBag.ThisWebsite })

@using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori İD</h4>
                        <h6 class="card-subtitle">Kategori ağacında belirtilen numarayı burada giriniz.</h6>

                        <div class="form-group">
                            <input type="number" asp-for="Categoryid" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Resim Yükle</h4>
                        <div class="input-group mb-3">

                            <div class="custom-file">
                                <input type="file" class="custom-file-input">
                                <label class="custom-file-label">Dosya Seç</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Başlık</h4>
                        <h6 class="card-subtitle">Ürün Başlığını burada giriniz</h6>

                        <div class="form-group">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
        </div>





        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Meta Açıklama</h4>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Description" aria-describedby="Meta Açıklama" placeholder="MetaDescription">
                        <small id="" class="form-text text-muted">Karakter sayısı kuralı girilecek</small>
                    </div>
                    <h4 class="card-title">Meta Anahtar kelime</h4>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Keywords" aria-describedby="MetaKeyword" placeholder="MetaKeyword">
                        <small id="name" class="form-text text-muted">Anahtar Kelimeleri lütfen virgül ile ayırın.</small>
                    </div>
                    <h4 class="card-title">Sayfa Başlığı</h4>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Title" aria-describedby="MetaTitle" placeholder="MetaTitle">
                        <small id="name" class="form-text text-muted">Anahtar Kelimeleri lütfen virgül ile ayırın.</small>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="3" asp-for="MetaTags" placeholder="Meta İnputları">

                            </textarea>
                    </div>
                    <h4 class="card-title">Content Editör</h4>
                    <div class="form-group">
                        <textarea id="editor4" name="Content">
                                @Html.Raw(Model.Content)
                            </textarea>
                    </div>




                </div>
            </div>
        </div>
    }






@section Scripts{

}